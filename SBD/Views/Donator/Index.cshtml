@*

    @model IEnumerable<SBD.Models.Donator>
*@
@model SBD.Pagination.PaginatedList<SBD.Models.Donator>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div>
    sortuj wed³ug



    <a asp-action="Index" asp-route-sortOrder="@ViewData["NazwiskoSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">nazwisko</a>


</div>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |

        </p>
    </div>
    <div>



        @{
            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
        }

        <a asp-action="Index"
           asp-route-sortOrder="@ViewData["CurrentSort"]"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           asp-route-currentFilter="@ViewData["CurrentFilter"]"
           class="btn btn-default @prevDisabled">
            Previous
        </a>
        <a asp-action="Index"
           asp-route-sortOrder="@ViewData["CurrentSort"]"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           asp-route-currentFilter="@ViewData["CurrentFilter"]"
           class="btn btn-default @nextDisabled">
            Next
        </a>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().GrupaKrwi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Rh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Waga)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Wzrost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Nastepnadonacja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Osoba)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GrupaKrwi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Waga)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Wzrost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nastepnadonacja)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Info)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Donatorid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Donatorid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Donatorid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
