@model IEnumerable<SBD.Models.Donacja>

@{
    ViewData["Title"] = "Donacje";
}

<h1>Donacje</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IloscDonacji)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datadonacji)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Badania)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pielegniarka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Typ)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FormatIloscDonacji)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormatDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Badania.Badaniaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Donator.Info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pielegniarka.Info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Typ.Typ)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Donacjaid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Donacjaid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Donacjaid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
