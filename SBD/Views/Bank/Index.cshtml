@model IEnumerable<SBD.Models.Bankkrwi>
*@
@model SBD.Pagination.PaginatedList<SBD.Models.Bankkrwi>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div>
    sortuj wed³ug

    <a asp-action="Index" asp-route-sortOrder="@ViewData["AdresSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">adres</a>

    <a asp-action="Index" asp-route-sortOrder="@ViewData["TypSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">typ krwii</a>

</div>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |

        </p>
    </div>
    <div>



        @{
            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
        }

        <a asp-action="Index"
           asp-route-sortOrder="@ViewData["CurrentSort"]"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           asp-route-currentFilter="@ViewData["CurrentFilter"]"
           class="btn btn-default @prevDisabled">
            Previous
        </a>
        <a asp-action="Index"
           asp-route-sortOrder="@ViewData["CurrentSort"]"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           asp-route-currentFilter="@ViewData["CurrentFilter"]"
           class="btn btn-default @nextDisabled">
            Next
        </a>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Typkrwi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Adres)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Typkrwi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adres.Info)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Bankid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Bankid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Bankid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
